<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="3dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/myLikesProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight=".01"
            android:background="@drawable/no_user_icon"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/main_like_LinearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.39"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myLikesClipName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:textColor="#000000" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/myLikesArtistName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:textColor="#e53173" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/likes_icon" />

            </RelativeLayout>

            <TextView
                android:id="@+id/myLikesArtistCity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:paddingLeft="8dp"
                android:textColor="#000000" />

        </LinearLayout>

        <!--  <VideoView
              android:id="@+id/like_sound_only"
              android:layout_width="1dp"
              android:layout_height="1dp"
              android:background="#00000000"
              android:focusable="false"
              android:focusableInTouchMode="false" />-->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="18dp"
            android:layout_weight=".5">

            <ImageView
                android:id="@+id/likes_play_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/play_button_grey"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/play_button_pink"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/play_button_pink"
                android:textColor="#000000"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
