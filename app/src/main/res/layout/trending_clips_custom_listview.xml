<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/trendingclipProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight=".1"
            android:background="@drawable/no_user_icon"
            android:layout_gravity="center"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trendingclipTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:textColor="#e53173" />

            <TextView
                android:id="@+id/trendingAtristName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/trendingclipaddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:gravity="center_vertical"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/trendingclipindex"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="17dp"
            android:layout_weight=".30"
            android:textSize="10dp"
            android:background="@drawable/followers_circle"
            android:gravity="center"
            android:textColor="#000000" />

    </LinearLayout>

</LinearLayout>
