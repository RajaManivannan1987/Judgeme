<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="3dp"
    android:layout_marginStart="3dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="3dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".3"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/list_move_icon" />

        <LinearLayout
            android:id="@+id/clipsMainlinear"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginStart="5dp"
            android:layout_weight="2.3"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/artist_clip_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textColor="@color/rose"
                android:textSize="@dimen/content_text_size" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/likes_icon" />

                <TextView
                    android:id="@+id/artist_clips_like_textView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="3dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </LinearLayout>
        <!-- <VideoView
             android:id="@+id/sound_only"
             android:layout_width="1dp"
             android:background="#00000000"
             android:focusable="false"
             android:focusableInTouchMode="false"
             android:layout_height="1dp" />-->


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight=".4">

            <ImageView
                android:id="@+id/audio_playbutton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/play_button_grey"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/artist_play_button_pink"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/play_button_pink"
                android:textColor="#000000"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
