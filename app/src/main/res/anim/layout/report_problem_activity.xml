<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#d3d3d3"
            android:gravity="center"
            android:text="Report A Problem"
            android:textColor="@color/purple"
            android:textSize="@dimen/actionbar_title_size" />

        <Button
            android:id="@+id/reportProblemBackButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_icon" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".8"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Clip"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/actionbar_title_size" />

                <TextView
                    android:id="@+id/clipTitleTextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/actionbar_title_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".8"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Type"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/actionbar_title_size" />

                <EditText
                    android:id="@+id/typeEditText"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical"
                    android:hint="Select Type"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/actionbar_title_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".8"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Text"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/actionbar_title_size" />

                <EditText
                    android:id="@+id/reportTextEditText"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical"
                    android:hint="Enter Yout Report"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/actionbar_title_size" />
            </LinearLayout>

            <Button
                android:id="@+id/reportSubmitButton"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:background="@drawable/button_style"
                android:text="Submit"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>