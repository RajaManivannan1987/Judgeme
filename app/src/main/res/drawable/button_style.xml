<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#00000000"></stroke>

            <corners android:radius="5dp" />

            <gradient android:angle="180" android:endColor="#663b86" android:startColor="#663b86" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" android:state_pressed="true">
            <corners android:radius="1dp" />

            <stroke android:width="1dp" android:color="#f5d6f9" />

            <gradient android:angle="-180" android:endColor="#728FCE" android:startColor="#ffffff" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="#663b86" android:startColor="#663b86" />

            <solid android:color="@color/purple" />

            <corners android:radius="3dp" />

            <stroke android:width="3dp" android:color="#410b68" />
        </shape>
    </item>

</selector>